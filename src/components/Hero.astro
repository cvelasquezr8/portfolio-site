---
import en from '../i18n/en.json';
import es from '../i18n/es.json';

const pathPage = (globalThis as any).BASE_URL;
const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';
const translations = lang === 'en' ? en : es;
---

<section class="container mx-auto px-4 pt-32 pb-16 section-fade">
	<div class="max-w-4xl mx-auto text-center">
		<div class="relative mb-12">
			<div
				class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full blur-2xl opacity-20"
			>
			</div>
			<img
				src={`${pathPage}images/carlos-velasquez.jpg`}
				alt="Profile"
				class="w-48 h-48 rounded-full mx-auto border-4 border-blue-500 shadow-xl relative z-10 float"
			/>
		</div>

		<h1 class="text-5xl font-bold mb-6">
			<span class="text-2xl block mb-4 text-blue-500"
				>{translations.hero_section.mission_control}</span
			>
			<span class="gradient-text flex items-center justify-center gap-3">
				Carlos Velasquez
				<img
					src={`${pathPage}images/astronaut.png`}
					alt="Astronaut"
					class="w-12 h-12 astronaut inline-block"
				/>
			</span>
		</h1>

		<div
			class="flex flex-wrap justify-center gap-6 mb-8 text-sm tracking-wide"
		>
			<span
				class="glow px-4 py-2 rounded-full bg-blue-500/10 border border-blue-500/20"
				>{translations.hero_section.role.full_stack_explorer}</span
			>
			<span
				class="glow px-4 py-2 rounded-full bg-purple-500/10 border border-purple-500/20"
				>{translations.hero_section.role.code_astronaut}</span
			>
			<span
				class="glow px-4 py-2 rounded-full bg-blue-500/10 border border-blue-500/20"
				>{translations.hero_section.role.space_developer}</span
			>
		</div>

		<p class="text-gray-300 max-w-2xl mx-auto mb-12 leading-relaxed">
			{translations.hero_section.hero_description}
		</p>

		<a
			href={`${pathPage}resume.pdf`}
			download
			class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-lg font-medium hover:from-blue-500 hover:to-purple-500 transition-all shadow-lg hover:-translate-y-1 group glow"
		>
			<span class="text-xl">ðŸš€</span>
			{translations.hero_section.launch_mission}
			<svg
				class="w-5 h-5 group-hover:translate-x-1 transition-transform"
				fill="none"
				stroke="currentColor"
				viewBox="0 0 24 24"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
			</svg>
		</a>
	</div>
</section>
