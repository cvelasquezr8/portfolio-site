---
import { languagesList } from '../i18n/ui';
import { useTranslations } from '../i18n/utils';
import { SOCIAL_LINKS } from '../constants';

const currentLang = Astro.currentLocale || 'en';
const pathPage = (globalThis as any).BASE_URL;
const translations = useTranslations(currentLang as keyof typeof languagesList);
const curriculum = currentLang === 'en' ? 'resume.pdf' : `resume-spanish.pdf`;
---

<section class="container mx-auto px-4 pt-32 pb-16 section-fade">
	<div class="max-w-4xl mx-auto text-center">
		<div class="relative mb-8">
			<div
				class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full blur-2xl opacity-20"
			>
			</div>
			<img
				src={`${pathPage}images/carlos-velasquez.jpg`}
				alt="Profile"
				class="w-48 h-48 rounded-full mx-auto border-4 border-blue-500 shadow-xl relative z-10 float"
			/>
		</div>

		<!-- Social Media Links -->
		<div class="flex justify-center gap-4 mb-8">
			{
				SOCIAL_LINKS.map((link) => (
					<a
						href={link.url}
						target="_blank"
						rel="noopener noreferrer"
						class={`p-3 rounded-lg bg-gradient-to-r ${link.color} hover:${link.hoverColor} transition-all duration-300 shadow-lg hover:scale-110`}
						title={link.name}
					>
						<img
							src={`${pathPage}images/${link.icon}`}
							alt={link.name}
							class="w-6 h-6"
							loading="lazy"
						/>
					</a>
				))
			}
		</div>

		<h1 class="text-5xl font-bold mb-6">
			<span class="text-2xl block mb-4 text-blue-500"
				>{translations('hero.mission_control')}</span
			>
			<span class="gradient-text flex items-center justify-center gap-3">
				Carlos Velasquez
				<img
					src={`${pathPage}images/astronaut.png`}
					alt="Astronaut"
					class="w-12 h-12 astronaut inline-block"
				/>
			</span>
		</h1>

		<div
			class="flex flex-wrap justify-center gap-6 mb-8 text-sm tracking-wide"
		>
			<span
				class="glow px-4 py-2 rounded-full bg-gradient-to-r from-blue-900/80 via-blue-700/80 to-blue-600/80 border border-blue-500/30 text-blue-100 hover:from-blue-800/90 hover:via-blue-600/90 hover:to-blue-500/90 transition-all duration-300 shadow-lg shadow-blue-900/30"
				>{translations('hero.full_stack_explorer')}</span
			>
			<span
				class="glow px-4 py-2 rounded-full bg-gradient-to-r from-indigo-900/80 via-purple-800/80 to-purple-600/80 border border-purple-500/30 text-purple-100 hover:from-indigo-800/90 hover:via-purple-700/90 hover:to-purple-500/90 transition-all duration-300 shadow-lg shadow-purple-900/30"
				>{translations('hero.code_astronaut')}</span
			>
			<span
				class="glow px-4 py-2 rounded-full bg-gradient-to-r from-blue-950/80 via-blue-800/80 to-indigo-700/80 border border-blue-500/30 text-blue-100 hover:from-blue-900/90 hover:via-blue-700/90 hover:to-indigo-600/90 transition-all duration-300 shadow-lg shadow-blue-900/30"
				>{translations('hero.space_developer')}</span
			>
		</div>

		<p class="text-gray-300 max-w-2xl mx-auto mb-12 leading-relaxed">
			{translations('hero.description')}
		</p>

		<a
			href={`${pathPage}${curriculum}`}
			download
			class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-lg font-medium hover:from-blue-500 hover:to-purple-500 transition-all shadow-lg hover:-translate-y-1 group glow"
		>
			<span class="text-xl">ðŸŒŽ</span>
			{translations('hero.launch_mission')}
			<svg
				class="w-7 h-6 group-hover:translate-x-1 transition-transform"
				fill="none"
				stroke="currentColor"
				viewBox="0 0 24 24"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="3"
					d="M7 13l5 5m0 0l5-5m-5 5V6"></path>
			</svg>
		</a>
	</div>
</section>
