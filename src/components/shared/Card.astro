---
import type { BaseCard } from '../../types';

interface Props extends BaseCard {
	className?: string;
}

const { title, description, icon, tags, className = '' } = Astro.props;
---

<div class={`skill-card rounded-xl p-6 float ${className}`}>
	<div class="flex items-start justify-between mb-4">
		<div class="flex-1">
			<slot name="title">
				<h3 class="text-xl text-blue-500">{title}</h3>
			</slot>
		</div>
		<div
			class="w-12 h-12 rounded-full bg-gradient-to-r from-primary-color to-secondary-color flex items-center justify-center"
		>
			{icon}
		</div>
	</div>
	<p class="text-sm text-text-color/80 mb-4">
		{description}
	</p>
	<div class="flex flex-wrap gap-2 mb-4">
		{
			tags.map((tag) => (
				<span class="px-2 py-1 text-sm rounded bg-blue-500/10 border border-blue-500/20">
					{tag}
				</span>
			))
		}
	</div>
	<slot name="actions" />
</div>
