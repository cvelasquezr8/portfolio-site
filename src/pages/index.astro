---
import Layout from '../layouts/Layout.astro';
import KeepInTouch from '../components/KeepInTouch.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import Technologies from '../components/Technologies.astro';
---

<Layout>
	<main class="min-h-screen relative">
		<!-- Header -->
		<header
			class="fixed top-0 left-0 right-0 z-50 bg-gray-900/80 backdrop-blur-lg border-b border-blue-500/20"
		>
			<div class="container mx-auto px-4">
				<div class="flex items-center justify-between">
					<div
						class="text-2xl font-bold gradient-text flex items-center gap-2"
					>
						<div
							class="w-10 h-10 rounded-lg bg-gradient-to-r from-blue-600 to-purple-600 flex items-center justify-center text-white"
						>
							ðŸš€
						</div>
						<span class="hidden sm:inline flex items-center gap-3">
							Carlos Velasquez
						</span>
					</div>
					<div class="flex gap-2 bg-gray-800/50 p-2 rounded-lg">
						<button
							onclick="setTheme('dark')"
							class="p-2 rounded hover:bg-blue-500/20 transition-colors"
							title="Dark Mode"
						>
							ðŸŒ™
						</button>
					</div>
				</div>
			</div>
		</header>

		<!-- Hero Section -->
		<section class="container mx-auto px-4 pt-32 pb-16 section-fade">
			<div class="max-w-4xl mx-auto text-center">
				<div class="relative mb-12">
					<div
						class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full blur-2xl opacity-20"
					>
					</div>
					<img
						src="images/carlos-velasquez.png"
						alt="Profile"
						class="w-48 h-48 rounded-full mx-auto border-4 border-blue-500 shadow-xl relative z-10 float"
					/>
				</div>

				<h1 class="text-5xl font-bold mb-6">
					<span class="text-2xl block mb-4 text-blue-500"
						>MISSION CONTROL</span
					>
					<span
						class="gradient-text flex items-center justify-center gap-3"
					>
						Carlos Velasquez
						<img
							src="images/astronaut.png"
							alt="Astronaut"
							class="w-12 h-12 astronaut inline-block"
						/>
					</span>
				</h1>

				<div
					class="flex flex-wrap justify-center gap-6 mb-8 text-sm tracking-wide"
				>
					<span
						class="glow px-4 py-2 rounded-full bg-blue-500/10 border border-blue-500/20"
						>FULL STACK EXPLORER</span
					>
					<span
						class="glow px-4 py-2 rounded-full bg-purple-500/10 border border-purple-500/20"
						>CODE ASTRONAUT</span
					>
					<span
						class="glow px-4 py-2 rounded-full bg-blue-500/10 border border-blue-500/20"
						>SPACE DEVELOPER</span
					>
				</div>

				<p
					class="text-gray-300 max-w-2xl mx-auto mb-12 leading-relaxed"
				>
					Exploring the digital universe one line of code at a time.
					Building stellar applications that push the boundaries of
					what's possible.
				</p>

				<a
					href="/resume.pdf"
					download
					class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-lg font-medium hover:from-blue-500 hover:to-purple-500 transition-all shadow-lg hover:-translate-y-1 group glow"
				>
					<span class="text-xl">ðŸš€</span>
					Launch Mission
					<svg
						class="w-5 h-5 group-hover:translate-x-1 transition-transform"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
					</svg>
				</a>
			</div>
		</section>

		<Technologies />

		<!-- Projects Section -->
		<section class="py-16 section-fade bg-gray-900/50">
			<div class="container mx-auto px-4">
				<div class="max-w-4xl mx-auto">
					<h2 class="text-3xl font-bold mb-12 text-center">
						<span class="text-xl block mb-4 text-blue-500"
							>SPACE MISSIONS</span
						>
						Featured Projects
					</h2>

					<div class="grid md:grid-cols-2 gap-8">
						<!-- Project 1 -->
						<div
							class="skill-card rounded-lg overflow-hidden project-card"
						>
							<div class="relative h-48">
								<div
									class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 opacity-20"
								>
								</div>
								<img
									src="https://images.unsplash.com/photo-1635070041078-e363dbe005cb?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80"
									alt="Space Dashboard"
									class="w-full h-full object-cover"
								/>
							</div>
							<div class="p-6">
								<h3
									class="text-xl font-semibold mb-2 text-blue-500"
								>
									Space Dashboard
								</h3>
								<p class="text-gray-400 mb-4">
									Real-time analytics platform with
									interactive visualizations
								</p>
								<div class="flex flex-wrap gap-2 mb-4">
									<span
										class="px-2 py-1 text-sm rounded bg-blue-500/10 border border-blue-500/20"
										>React</span
									>
									<span
										class="px-2 py-1 text-sm rounded bg-blue-500/10 border border-blue-500/20"
										>D3.js</span
									>
									<span
										class="px-2 py-1 text-sm rounded bg-blue-500/10 border border-blue-500/20"
										>WebSocket</span
									>
								</div>
								<div class="flex gap-4">
									<a
										href="#"
										class="text-blue-500 hover:text-blue-400 transition-colors flex items-center gap-1"
									>
										<span>View Project</span>
										<span class="text-xl">ðŸš€</span>
									</a>
									<a
										href="#"
										class="text-gray-400 hover:text-blue-500 transition-colors flex items-center gap-1"
									>
										<span>GitHub</span>
										<svg
											class="w-5 h-5"
											fill="currentColor"
											viewBox="0 0 24 24"
										>
											<path
												d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
											></path>
										</svg>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<KeepInTouch />
		<Footer />
	</main>
</Layout>
